<layout>

    <data>

        <variable
            name="landlordReg"
            type="com.example.propertymanagement.ui.auth.AuthViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/banner"
                android:layout_width="350dp"
                android:layout_height="230dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/logo_foreground"
                android:textSize="32dp" />

            <EditText
                android:layout_below="@+id/banner"
                android:id="@+id/edit_text_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:text="@={landlordReg.name}" />

            <EditText
                android:id="@+id/edit_text_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_register_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingBottom="20dp"
                android:text="@={landlordReg.email}" />

            <EditText
                android:id="@+id/edit_text_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_register_email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:text="@={landlordReg.password}" />

            <Button
                android:id="@+id/button_register_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edit_text_register_password"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="#00008b"
                android:onClick="@{landlordReg::onLandlordRegisterButtonClicked}"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/button_login_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_register_register"
                android:layout_margin="15dp"
                android:onClick="@{landlordReg::onHaveAccountButtonClicked}"
                android:text="Already have an account?" />


        </RelativeLayout>
    </ScrollView>

</layout>
